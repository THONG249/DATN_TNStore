
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<WebBanHang.Context.Order>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách đơn đặt hàng</h2>
@using (Html.BeginForm("Index", "AdminCart", FormMethod.Get))
{
    <p>
        Tìm tên sản phẩm: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Tìm kiếm" />
    </p>
}

    <div>
        <table class="table table-bordered">
            <tr>
                <th>
                    Tên Đơn Hàng
                </th>
                <th>
                    ID Người Dùng
                </th>
                <th>
                    Ngày Đặt Hàng
                </th>
                <th>
                    Ngày Giao Hàng
                </th>
                <th>
                    Người nhận
                </th>
                <th>
                    Email
                </th>
                <th>
                    Địa chỉ
                </th>
                <th>
                    Số điện thoại
                </th>


            <tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOnUtc)
                    </td>
                    <td>
                        @item.NgayGiaHang
                    </td>
                    <td>
                        @item.User.FirstName @item.User.LastName
                    </td>
                    <td>
                        @item.User.Email
                    </td>
                    <td>
                        @item.User.DiaChi
                    </td>
                    <td>
                        @item.User.Phone
                    </td>
                    <td>
                        @Html.ActionLink("Xác nhận đơn hàng", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Chi Tiết", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Xóa ", "Delete", new { id = item.Id })
                    </td>

                </tr>
            }

            </table>
        </div>
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.currentFilter }))
