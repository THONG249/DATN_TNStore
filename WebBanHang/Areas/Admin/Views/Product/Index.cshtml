@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<WebBanHang.Context.Product>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sản phẩm</h2>
<p>
    <button class="btn-default">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <p>
        Tìm tên sản phẩm: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Tìm kiếm" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>  
            Tên
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Miêu tả
        </th>
        <th>
            Giá
        </th>
        <th>
            Slug
        </th>
        <th>
            Năm sản xuất
        </th>
        <th>
            Khối lượng
        </th>
        <th>
            CPU
        </th>
        <th>
            RAM
        </th>
        <th>
            Màu sắc
        </th>
        <th>
            Hệ điều hành
        </th>
        <th>
            Độ phân giải
        </th>
        <th>
            Chất liệu
        </th>
        <th>
            Tốc độ
        </th>
        <th>
            Pin
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width: 600px">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="@Url.Content("~/Content/images/items/" + item.Avater)" width="100" />
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.FullDescription)*@
                @Html.Raw(item.FullDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RAM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resolution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Battery)
            </td>
            <td>
                <div style="background-color: #AAAAAA; padding: 8px 8px; color: white; border-radius: 8px">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </div>
                <div style="background-color: #AAAAAA; padding: 8px 8px; color: white; border-radius: 8px;  margin-top: 8px ">
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </div>
                <div style="background-color: #AAAAAA; padding: 8px 8px; color: white; border-radius: 8px; margin-top: 8px">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </div>
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.currentFilter }))