@model PagedList.IPagedList<WebBanHang.Context.User>
@using PagedList;
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách người dùng</h2>

<table class="table table-bordered">
    <tr>
        <th>
            Tên người dùng
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
           Email
        </th>
        <th>
           Password
        </th>
        <th>
            Quyền
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
             @item.FirstName @item.LastName
            </td>
            <td>
                @item.Phone
            </td>
            <td>
                @item.DiaChi
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassWord)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
            <p>
                 <button class="btn-default"> @Html.ActionLink("Details", "Details", new { id = item.Id })</button>
                 <button class="btn-default">  @Html.ActionLink("Delete", "Delete", new { id = item.Id })</button></p>
            </td>
        </tr>
    }

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.currentFilter }))